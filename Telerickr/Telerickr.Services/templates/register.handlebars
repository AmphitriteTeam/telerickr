<fieldset>
    <legend>Register a new User</legend>
    <div class="form-group">
        <label for="tb-reg-username">Email:</label>
        <input type="text" class="form-control" id="tb-reg-username" />
    </div>
    <div class="form-group">
        <label for="tb-reg-pass">Password:</label>
        <input type="password" class="form-control" id="tb-reg-pass" />
    </div>
    <div class="form-group">
        <label for="tb-reg-pass">Confirm password:</label>
        <input type="password" class="form-control" id="tb-reg-confirmPass" />
    </div>
    <button class="btn btn-primary" id="btn-register">Register</button>
</fieldset>